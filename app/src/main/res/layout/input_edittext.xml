<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/victories_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:background="@drawable/editext_border"
        android:hint="@string/enter"
        android:inputType=""
        android:padding="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textColorHint="@color/views_text_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@+id/victories_edittext"
        app:layout_constraintEnd_toEndOf="@+id/victories_edittext"
        app:layout_constraintTop_toTopOf="@+id/victories_edittext"
        android:contentDescription="">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>