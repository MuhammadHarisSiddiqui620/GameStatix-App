                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:text="@string/enter_name"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        </TextView>

        <EditText
            android:id="@+id/name_editext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/enter"
            android:textColorHint="@color/views_text_hint"
            android:padding="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/editext_border"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/select_the_indicators_to_edit"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/name_editext"
            app:layout_constraintTop_toBottomOf="@+id/name_editext">

        </TextView>

        <LinearLayout
            android:id="@+id/ll_checkbox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/textView2"
            app:layout_constraintEnd_toEndOf="@id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@id/textView2">

            <CheckBox
                android:id="@+id/checkbox_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/my_checkbox_style"
                android:text="@string/win" />

            <CheckBox
                android:id="@+id/checkbox_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/my_checkbox_style"
                android:text="@string/draw" />

            <CheckBox
                android:id="@+id/checkbox_loose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/my_checkbox_style"
                android:text="@string/loose" />

            <CheckBox
                android:id="@+id/checkbox_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/my_checkbox_style"
                android:text="@string/score" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_checkbox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/linearLayout5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/ll_checkbox1"
            app:layout_constraintTop_toBottomOf="@id/ll_checkbox1">

            <CheckBox
                android:id="@+id/checkbox_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                style="@style/my_checkbox_style"
                android:text="@string/points" />

            <CheckBox
                android:id="@+id/checkbox_played_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:checked="true"
                android:clickable="false"
                style="@style/my_checkbox_style"
                android:text="@string/played_games" />

        </LinearLayout>

        <TextView
